{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ],
  "env": {
    "PORT": 3000
  },
  "headers": [
    {
      "source": "/api/auth",
      "headers": [
        { "key": "Content-Type", "value": "application/json" }
      ]
    }
  ]
}
